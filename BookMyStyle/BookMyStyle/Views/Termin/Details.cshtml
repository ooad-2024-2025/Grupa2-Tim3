@model BookMyStyle.Models.Termin

@section Styles {
    <link rel="stylesheet" href="~/css/obavijest.css" />
}

@{
    ViewData["Title"] = "Detalji Termina";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2 class="text-white mb-4">Detalji Termina</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">

                    <h5 class="card-title mb-3">Informacije o Terminu</h5>
                    <hr class="border-secondary" />

                    <dl class="row mb-4">
                        <dt class="col-sm-3 text-secondary">Salon</dt>
                        <dd class="col-sm-9">@Model.NazivSalona</dd>

                        <dt class="col-sm-3 text-secondary">Adresa</dt>
                        <dd class="col-sm-9">@Model.AdresaSalona</dd>

                        <dt class="col-sm-3 text-secondary">Frizer</dt>
                        <dd class="col-sm-9">@Model.NazivFrizera</dd>

                        <dt class="col-sm-3 text-secondary">Datum i vrijeme</dt>
                        <dd class="col-sm-9">@Model.DatumIVrijeme.ToString("dd.MM.yyyy. HH:mm")</dd>
                    </dl>

                    <div class="d-flex justify-content-center gap-3">
                        @if (User.IsInRole("Korisnik") &&
                                                Model.KorisnikID == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                        {
                            <a asp-controller="Termin"
                               asp-action="Otkazi"
                               asp-route-id="@Model.terminID"
                               class="btn btn-danger btn-sm">
                                Otkaži termin
                            </a>

                        }

                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            Natrag na listu
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
