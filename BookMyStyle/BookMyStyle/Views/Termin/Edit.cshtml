@model BookMyStyle.Models.Termin

@{
    ViewData["Title"] = "Uredi termin";
}

@section Styles {
    <link rel="stylesheet" href="~/css/obavijest.css" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h2 class="text-white mb-4">Uredi termin</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white mb-4">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="terminID" />
                        <input type="hidden" asp-for="FrizerID" />
                        <input type="hidden" asp-for="KorisnikID" />
                        <input type="hidden" asp-for="uslugaID" />
                        <input type="hidden" asp-for="salonID" />

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="NazivSalona" class="form-label">Naziv salona:</label>
                            <input asp-for="NazivSalona" class="form-control" />
                            <span asp-validation-for="NazivSalona" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="AdresaSalona" class="form-label">Adresa salona:</label>
                            <input asp-for="AdresaSalona" class="form-control" />
                            <span asp-validation-for="AdresaSalona" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NazivFrizera" class="form-label">Frizer:</label>
                            <input asp-for="NazivFrizera" class="form-control" />
                            <span asp-validation-for="NazivFrizera" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="DatumIVrijeme" class="form-label">Datum i vrijeme:</label>
                            <input asp-for="DatumIVrijeme" class="form-control" type="datetime-local" />
                            <span asp-validation-for="DatumIVrijeme" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success btn-sm">Spremi izmjene</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Natrag na listu</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
