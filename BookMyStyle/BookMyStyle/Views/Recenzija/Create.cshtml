@model BookMyStyle.Models.Recenzija

@{
    ViewData["Title"] = "RECENZIJA";
}
@section Styles {
    <link rel="stylesheet" href="~/css/obavijest.css" />
}

<h1>Napiši</h1>
<h4>Recenziju</h4>
<hr />
<div class="row">
    <div class="col-md-4">
       
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Ocjena -->
            <div class="form-group mb-3">
                <label asp-for="Ocjena" class="control-label"></label>
                <input asp-for="Ocjena" class="form-control" />
                <span asp-validation-for="Ocjena" class="text-danger"></span>
            </div>


            <!-- Komentar -->
            <div class="form-group mb-3">
                <label asp-for="Komentar" class="control-label"></label>
                <textarea asp-for="Komentar" class="form-control"></textarea>
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>

            

            <!-- Salon (dropdown) -->
            <div class="form-group mb-3">
                <label asp-for="SalonID" class="control-label">Salon</label>
                <select asp-for="SalonID" asp-items="ViewBag.Saloni" class="form-control">
                    <option value="">-- Odaberi salon --</option>
                </select>
                <span asp-validation-for="SalonID" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-success btn-create">
                    <i class="bi bi-plus-circle me-2"></i> Kreiraj
                </button>
            </div>
        </form>
    </div>
</div>

<div class="card-footer bg-dark text-left">
    <a asp-action="Index" class="link-back">← Vrati se na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


