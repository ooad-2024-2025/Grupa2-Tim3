@model BookMyStyle.Models.Recenzija

@{
    ViewData["Title"] = "Uredi";
}
@section Styles {
    <link rel="stylesheet" href="~/css/obavijest.css" />
}

<h1>Uredi</h1>

<h4>Recenzija</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="recenzijaID" />
            <div class="form-group">
                <label asp-for="Ocjena" class="control-label"></label>
                <input asp-for="Ocjena" class="form-control" />
                <span asp-validation-for="Ocjena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DatumObjave" class="control-label"></label>
                <input asp-for="DatumObjave" class="form-control" />
                <span asp-validation-for="DatumObjave" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Komentar" class="control-label"></label>
                <input asp-for="Komentar" class="form-control" />
                <span asp-validation-for="Komentar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="korisnikID" class="control-label"></label>
                <input asp-for="korisnikID" class="form-control" />
                <span asp-validation-for="korisnikID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="salonID" class="control-label"></label>
                <input asp-for="salonID" class="form-control" />
                <span asp-validation-for="salonID" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-start gap-3">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save me-1"></i> Spremi
                </button>
                
                
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                Natrag na listu
            </a>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
