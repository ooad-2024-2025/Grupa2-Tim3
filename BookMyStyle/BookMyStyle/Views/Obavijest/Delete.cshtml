@model BookMyStyle.Models.Obavijest
@section Styles {
    <link rel="stylesheet" href="~/css/obavijest.css" />
}

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <!-- Naslov stranice -->
    <h2 class="text-white mb-4">Obavijest – Potvrda brisanja</h2>

    <!-- Kartica sa svim detaljima -->
    <div class="card bg-dark text-white mb-4">
        <div class="card-body">
            <h5 class="card-title">Jeste li sigurni da želite obrisati ovu obavijest?</h5>

            <hr class="border-secondary" />

            <!-- Detalji obavijesti -->
            <dl class="row mb-4">
                <!-- Tekst -->
                <dt class="col-sm-2 text-secondary">Tekst</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Tekst)
                </dd>

                <!-- Datum i vrijeme -->
                <dt class="col-sm-2 text-secondary">Datum i vrijeme</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DatumIVrijeme)
                </dd>

                <!-- TerminID -->
                <dt class="col-sm-2 text-secondary">Termin: ID</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.terminID)
                </dd>
            </dl>

            <!-- Forma za potvrdu brisanja -->
            <form asp-action="Delete" method="post" class="d-flex justify-content-start gap-2">
                <input type="hidden" asp-for="obavijestID" />

                <!-- Delete gumb -->
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt me-1"></i> Obriši
                </button>

                <!-- Back to List gumb -->
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-1"></i> Natrag na listu
                </a>
            </form>
        </div>
    </div>
</div>
