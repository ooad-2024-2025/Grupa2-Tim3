@{
    ViewData["Title"] = "Početna stranica";
}
@{
    ViewData["Recenzija"] = "Recenzija";
}
<div class="container py-5">
    <div class="row align-items-center">
        <!-- Logo i slika lijevo -->
        <div class="col-lg-6 text-center mb-4 mb-lg-0">
            <img src="~/images/logo.png" alt="BookMyStyle Logo" class="img-fluid mb-3" style="max-height: 120px;">
          
        </div>
        <!-- Info desno -->
        <div class="col-lg-6">
            <h1 class="display-5 fw-bold mb-3" style="color: #9631be;">BookMyStyle</h1>
            <h4 class="mb-3" style="color: #564592;">Rezerviši termin za svoj stil!</h4>
            <p class="lead mb-4">
                BookMyStyle je moderan sistem za online rezervaciju termina u frizerskim salonima.<br />
                Pronađi, uporedi i zakaži termin brzo i jednostavno.
            </p>
            <ul class="list-group mb-3 shadow-sm">
                <li class="list-group-item border-0 ps-0"><b>✔</b> Pregled i rezervacija termina</li>
                <li class="list-group-item border-0 ps-0"><b>✔</b> Ostavljanje i pregled recenzija</li>
                <li class="list-group-item border-0 ps-0"><b>✔</b> Automatska obavještenja putem e-maila</li>
                <li class="list-group-item border-0 ps-0"><b>✔</b> Sortiranje usluga po različitim kriterijima</li>
                <li class="list-group-item border-0 ps-0"><b>✔</b> Opcija dolaska frizera na vašu adresu</li>
            </ul>
            <div>
                <span class="fw-bold">Tim:</span>
                <span class="badge rounded-pill bg-secondary me-1">Ajdin Kanlić</span>
                <span class="badge rounded-pill bg-secondary me-1">Emina Hamamdžić</span>
                <span class="badge rounded-pill bg-secondary me-1">Mirza M. Halilović</span>
                <span class="badge rounded-pill bg-secondary me-1">Ajnur Kušundžija</span>
            </div>
            <div class="mt-4">
                <a href="https://github.com/ooad-2024-2025/Grupa2-Tim3" target="_blank" class="btn btn-outline-dark">
                    GitHub repozitorij
                </a>
            </div>
        </div>
    </div>
</div>
