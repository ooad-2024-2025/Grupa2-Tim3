@model BookMyStyle.Models.Usluga

@{
    ViewData["Title"] = "Uredi uslugu";
}

@section Styles {
    <style>
        /* Card container */
        .edit-usluga-card {
            max-width: 520px;
            margin: 40px auto;
            background-color: #252525;
            border-radius: 8px;
            box-shadow: 0 6px 20px rgba(0,0,0,0.3);
            overflow: hidden;
        }
            /* Header */
            .edit-usluga-card .card-header {
                background-color: #33343a;
                padding: 16px 24px;
            }

                .edit-usluga-card .card-header h2 {
                    color: #fff;
                    margin: 0;
                    font-size: 1.75rem;
                    letter-spacing: 1px;
                }
            /* Body */
            .edit-usluga-card .card-body {
                padding: 24px;
            }

            .edit-usluga-card label {
                display: block;
                font-weight: 500;
                color: #fff;
                margin-bottom: 6px;
            }

            .edit-usluga-card input,
            .edit-usluga-card select,
            .edit-usluga-card textarea {
                width: 100%;
                padding: 10px 12px;
                margin-bottom: 14px;
                font-size: 1rem;
                border: 1px solid #1fbfaf;
                border-radius: 4px;
                background: #f8fafc;
                color: #202124;
                transition: border-color 0.2s;
            }

                .edit-usluga-card input:focus,
                .edit-usluga-card select:focus,
                .edit-usluga-card textarea:focus {
                    outline: none;
                    border-color: #13a08c;
                }

            .edit-usluga-card .text-danger {
                display: block;
                min-height: 20px;
                margin-top: -10px;
                margin-bottom: 12px;
                color: #ff6161;
                font-size: 0.95rem;
            }

            /* Buttons */
            .edit-usluga-card .btn-group {
                display: flex;
                gap: 12px;
                margin-top: 8px;
            }

            .edit-usluga-card .btn-save {
                flex: 1;
                background: #12c4a3;
                color: #fff;
                padding: 10px 0;
                border: none;
                border-radius: 4px;
                font-weight: 600;
                cursor: pointer;
                transition: background 0.2s;
            }

                .edit-usluga-card .btn-save:hover {
                    background: #10917e;
                }

            .edit-usluga-card .btn-cancel {
                flex: 1;
                text-align: center;
                line-height: 2.2;
                color: #12c4a3;
                text-decoration: none;
                font-weight: 500;
            }

                .edit-usluga-card .btn-cancel:hover {
                    text-decoration: underline;
                }
    </style>
}

<div class="edit-usluga-card">
    <div class="card-header">
        <h2>UREDI USLUGU</h2>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="uslugaID" />
            <input type="hidden" asp-for="salonID" />

            <label asp-for="Cijena"></label>
            <input asp-for="Cijena" />
            <span asp-validation-for="Cijena" class="text-danger"></span>

            <label asp-for="Naziv"></label>
            <input asp-for="Naziv" />
            <span asp-validation-for="Naziv" class="text-danger"></span>

            <label asp-for="Popust"></label>
            <input asp-for="Popust" />
            <span asp-validation-for="Popust" class="text-danger"></span>

            <label asp-for="Opis"></label>
            <textarea asp-for="Opis" rows="2"></textarea>
            <span asp-validation-for="Opis" class="text-danger"></span>

            <label asp-for="Trajanje"></label>
            <input asp-for="Trajanje" />
            <span asp-validation-for="Trajanje" class="text-danger"></span>

            <label asp-for="Tip"></label>
            <select asp-for="Tip" asp-items="Html.GetEnumSelectList<TipUsluge>()"></select>
            <span asp-validation-for="Tip" class="text-danger"></span>

            <div class="btn-group">
                <input type="submit" value="Sačuvaj promjene" class="btn-save" />
                <a asp-action="Index" class="btn-cancel">← Vrati se na listu</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
