@model BookMyStyle.Models.Salon

@{
    ViewData["Title"] = "Kreiraj Salon";
}

@section Styles {
    <link rel="stylesheet" href="~/css/salon.css" />
}

<div class="content-wrapper">
    <h1 class="salon-title">Dodaj novi salon</h1>
    <hr style="border-color: rgba(255,255,255,0.1);" />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="card-dark">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Naziv -->
            <div class="form-group mb-3">
                <label asp-for="Naziv" class="control-label text-white">Naziv salona</label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>

            <!-- Adresa -->
            <div class="form-group mb-3">
                <label asp-for="Adresa" class="control-label text-white">Adresa salona</label>
                <input asp-for="Adresa" class="form-control" />
                <span asp-validation-for="Adresa" class="text-danger"></span>
            </div>

            <!-- Radno vrijeme -->
            <div class="form-group mb-3">
                <label asp-for="RadnoVrijeme" class="control-label text-white">Radno vrijeme</label>
                <input asp-for="RadnoVrijeme" class="form-control" />
                <span asp-validation-for="RadnoVrijeme" class="text-danger"></span>
            </div>

            <!-- Dugmad -->
            <div class="buttons-row mt-4">
                <button type="submit" class="btn-details">Spremi</button>
                <a asp-action="Index" class="btn-details">Lista salona</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
