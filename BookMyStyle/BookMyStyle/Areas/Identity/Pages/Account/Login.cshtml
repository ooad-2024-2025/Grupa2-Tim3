@page
@model LoginModel
@{
    ViewData["Title"] = "Prijava";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 p-4 bg-light">
            <form id="account" method="post">
                <h2 class="text-center mb-4">Prijavi se</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                    <label asp-for="Input.Email"><i class="bi bi-envelope-fill me-2"></i>Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Lozinka" />
                    <label asp-for="Input.Password"><i class="bi bi-lock-fill me-2"></i>Lozinka</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!--<div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Zapamti me
                    </label>
                </div>-->

                <button type="submit" class="w-100 btn btn-primary btn-lg shadow-sm mb-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Prijava
                </button>

                <div class="text-center">
                    <a asp-page="./ForgotPassword">Zaboravljena lozinka?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
