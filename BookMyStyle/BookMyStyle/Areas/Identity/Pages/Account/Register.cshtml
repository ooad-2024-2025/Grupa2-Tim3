@page
@model RegisterModel
@{
    ViewData["Title"] = "Registracija";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg rounded-4 p-4 bg-light">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center mb-4">Kreiraj račun</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Ime" class="form-control" placeholder="Ime" />
                    <label asp-for="Input.Ime"><i class="bi bi-person-fill me-2"></i>Ime</label>
                    <span asp-validation-for="Input.Ime" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Prezime" class="form-control" placeholder="Prezime" />
                    <label asp-for="Input.Prezime"><i class="bi bi-person-lines-fill me-2"></i>Prezime</label>
                    <span asp-validation-for="Input.Prezime" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                    <label asp-for="Input.Email"><i class="bi bi-envelope-fill me-2"></i>Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" placeholder="Lozinka" />
                    <label asp-for="Input.Password"><i class="bi bi-lock-fill me-2"></i>Lozinka</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Potvrdi lozinku" />
                    <label asp-for="Input.ConfirmPassword"><i class="bi bi-lock-fill me-2"></i>Potvrdi lozinku</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button id="registerSubmit" type="submit" class="w-100 btn btn-success btn-lg shadow-sm">
                    <i class="bi bi-check-circle-fill me-2"></i>Registruj se
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
